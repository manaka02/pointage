{% extends "base.html.twig" %}

{% block nav %}
{{ include ("modules/navbar.html.twig") }}
{% endblock %}

{% block body %}
<div class="container">
  {% if app.request.hasPreviousSession %}
  {% for message in app.flashes('success') %}
  <div class="alert alert-success">
    {{message}}
  </div>
  {% endfor %}
  {% for message in app.flashes('error') %}
  <div class="alert alert-danger mt-4">
    {{message}}
  </div>
  {% endfor %}
  {% endif %}*


  <div class="row mt-4">
    <div class="col-md-8">
      <h3>Récapitulation</h3>
    </div>


    <div class="row col-md-12">
      <div class="col-md-12">
        <h5>Utiliser des filtres
        </h5>
      </div>
      <form action="{{path('board')}}" method="get" class="col-sm-12">
        <div class="row">
          <div class="col-sm-3">
            <!-- text input -->
            <div class="form-group">
              <label for="" class="font-weight-light grey">Nom de l'employé</label>
              <input type="text" class="form-control form-control-sm" placeholder="Nom de l'employé" name="employe">
            </div>
          </div>
          <div class="col-sm-3">
            <div class="form-group">
              <label for="" class="font-weight-light grey">Date début</label>
              <input type="date" class="form-control form-control-sm" placeholder="Nom de l'employé" name="date_debut">
            </div>
          </div>
          <div class="col-sm-3">

            <div class="form-group">
              <label for="" class="font-weight-light grey">Date Fin</label>
              <input type="date" class="form-control form-control-sm" placeholder="Nom de l'employé" name="date_fin">
            </div>
          </div>
        </div>
        <div class="col-md-3 float-left">
          <button type="submit" class="btn btn-block btn-primary maincolor btn-sm btn-flat">Rechercher</button>
        </div>

      </form>

    </div>




  </div>

  <div class="row mt-4">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <div class="card-tools">
            <div class="input-group input-group-sm" style="width: 150px;">
              <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

              <div class="input-group-append">
                <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
              </div>
            </div>
          </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body table-responsive p-0">
          <table class="table table-hover text-nowrap table-sm table-bordered">
            <thead>
              <tr>
                <th>Nom et prénoms</th>
                <th>Poste</th>
                <th>Numéro</th>
                <th>Total heure de présence</th>
                <th>Total Heure normale de travail</th>
                <th>Total Heure jour</th>
                <th>Total Heure nuit</th>
                <th>Total Heure Samedi </th>
                <th>Total Manque</th>
                <th>Total Extra</th>

                {% for key,value in data['extraPerWeek'] %}
                <th>semaine {{key}} (Extra 8h)</th>
                <th>semaine {{key}} (Extra Surplus)</th>
                {% endfor %}

              </tr>
            </thead>
            <tbody>


              {% for line in data['data'] %}
              <tr>
                <td>{{line.virtualcolumns.nom_prenom}}</td>
                <td>{{line.virtualcolumns.poste}}</td>
                <td>{{line.virtualcolumns.employe_pointage_id}}</td>
                <td>{{line.totalWork|date("%H:%I:%S") }}</td>
                <td>{{line.totalNormal|date("%H:%I:%S")}}</td>
                <td>{{line.day|date("%H:%I:%S")}}</td>
                <td>{{line.night|date("%H:%I:%S")}}</td>
                <td>{{line.samedi|date("%H:%I:%S")}}</td>

                <td>{{line.totalWork|date("%H:%I:%S")}}</td>
              </tr>
              {% endfor %}

            </tbody>
          </table>
        </div>
        <!-- /.card-body -->
      </div>
      <!-- /.card -->
    </div>
  </div>
</div>
{% endblock %}